{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "."
      }
    }
  ],
  "routes": [
    {
      "src": "/ko-kr/(.*)",
      "dest": "/ko-kr/$1"
    },
    {
      "src": "/us-en/(.*)",
      "dest": "/us-en/$1"
    },
    {
      "src": "/korean",
      "dest": "/ko-kr/index.html"
    },
    {
      "src": "/english",
      "dest": "/us-en/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
} 